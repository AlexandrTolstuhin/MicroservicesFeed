{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "YARP": {
    "Routes": {
      "AggregatorRoute": {
        "ClusterId": "AggregatorCluster",
        "Match": {
          "Path": "aggregator/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "NotifierRoute": {
        "ClusterId": "NotifierCluster",
        "Match": {
          "Path": "notifier/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "NewsRoute": {
        "ClusterId": "NewsCluster",
        "Match": {
          "Path": "news/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "QuotesRoute": {
        "ClusterId": "QuotesCluster",
        "Match": {
          "Path": "quotes/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "WeatherRoute": {
        "ClusterId": "WeatherCluster",
        "Match": {
          "Path": "weather/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "AggregatorCluster": {
        "Destinations": {
          "Destination1": {
            "Address": "https://localhost:7010"
          }
        }
      },
      "NotifierCluster": {
        "Destinations": {
          "Destination1": {
            "Address": "https://localhost:7020"
          }
        }
      },
      "NewsCluster": {
        "Destinations": {
          "Destination1": {
            "Address": "https://localhost:7030"
          }
        }
      },
      "QuotesCluster": {
        "Destinations": {
          "Destination1": {
            "Address": "https://localhost:7040"
          }
        }
      },
      "WeatherCluster": {
        "Destinations": {
          "Destination1": {
            "Address": "https://localhost:7050"
          }
        }
      }
    }
  }
}
